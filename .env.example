# App Configuration
NEXT_PUBLIC_APP_URL=https://decebaldobrica.com
NODE_ENV=production

# Database
DATABASE_PATH=./data/chat-history.db

# Groq AI
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google Calendar
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://decebaldobrica.com/api/auth/google/callback
GOOGLE_REFRESH_TOKEN=your_refresh_token
CALENDAR_OWNER_EMAIL=decebal@dobrica.dev

# Email - Resend
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@decebaldobrica.com
EMAIL_REPLY_TO=decebal@dobrica.dev

# Analytics - PostHog (Optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Solana Pay
NEXT_PUBLIC_SOLANA_NETWORK=devnet  # devnet or mainnet-beta
NEXT_PUBLIC_SOLANA_MERCHANT_ADDRESS=your_solana_wallet_address
SOLANA_RPC_URL=https://api.devnet.solana.com  # or mainnet RPC


# Authentication (Optional - if using Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Feature Flags
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PAID_MEETINGS=false  # Show paid meeting types (30min, 60min, 90min)
NEXT_PUBLIC_ENABLE_HOMEPAGE_VIDEO=false  # Show video player on homepage (false = static image only)
